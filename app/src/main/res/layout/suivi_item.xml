<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_membre_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:text="Nom Membre : "
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/name_membre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/name_membre_lbl"
        app:layout_constraintStart_toEndOf="@+id/name_membre_lbl"
        app:layout_constraintBottom_toBottomOf="@+id/name_membre_lbl"
        android:layout_marginStart="10dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:text="Nom Membre : "
        android:layout_marginLeft="10dp" />


    <!-- TEL -->
    <TextView
        android:id="@+id/tel_membre_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_membre_lbl"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:text="Telephone Membre : "
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tel_membre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tel_membre_lbl"
        app:layout_constraintStart_toEndOf="@+id/tel_membre_lbl"
        app:layout_constraintBottom_toBottomOf="@+id/tel_membre_lbl"
        android:layout_marginStart="10dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:text="Nom Membre : "
        android:layout_marginLeft="10dp" />

    <!-- COMPOSANT -->
    <TextView
        android:id="@+id/name_composant_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tel_membre_lbl"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:text="Name Composant : "
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/name_composant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/name_composant_lbl"
        app:layout_constraintStart_toEndOf="@+id/name_composant_lbl"
        app:layout_constraintBottom_toBottomOf="@+id/name_composant_lbl"
        android:layout_marginStart="10dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:text="Nom Membre : "
        android:layout_marginLeft="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>